<UserControl x:Class="WPFAddressBook_2.MVVM.Views.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFAddressBook_2.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0 0 30 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Förnamn"/>
                <TextBox Name="tb_FirstName" Padding="3" Margin="0 0 0 10" />

                <TextBlock Text="Efternamn"/>
                <TextBox Name="tb_LastName" Padding="3" Margin="0 0 0 10" />

                <TextBlock Text="Telefonnummer"/>
                <TextBox Name="tb_PhoneNumber" Padding="3" Margin="0 0 0 10" />

                <TextBlock Text="Email"/>
                <TextBox Name="tb_Email" Padding="3" Margin="0 0 0 10" />

                <TextBlock Text="Gatuadress"/>
                <TextBox Name="tb_SteetName" Padding="3" Margin="0 0 0 10" />

                <TextBlock Text="Postkod"/>
                <TextBox Name="tb_PostalCode" Padding="3" Margin="0 0 0 10" />

                <TextBlock Text="Stad"/>
                <TextBox Name="tb_City" Padding="3" Margin="0 0 0 10" />
            </StackPanel>

            <Button Name="btn_Add" Click="Btn_Add_Click" Grid.Row="1" VerticalAlignment="Top" Content="LÄGG TILL" Padding="5" Margin="0,33,0,0" />
        </Grid>

        <Grid Grid.Column="1">
            <ListView Name="lv_Contacts" Margin="30 0 0 0" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="models:Contact">
                        <!--<Border BorderBrush="Gray" BorderThickness="1">-->
                        <StackPanel Margin="0 5 0 5" Width="325" Orientation="Horizontal" Name="parent">
                            <StackPanel Grid.Column="0">
                                <TextBlock Name="tblock_DisplayName" FontWeight="Bold" Text="{Binding DisplayName}" />
                                <TextBlock Name="tblock_Email" Text="{Binding Email}" />
                            </StackPanel>
                            <Button Name="btn_Remove" Click="Btn_Remove_Click" Content="TA BORT" Padding="5" Grid.Column="1"/>
                        </StackPanel>
                        <!--</Border>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
    </Grid>
</UserControl>
